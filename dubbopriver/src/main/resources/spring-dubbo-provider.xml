	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="tubobo_merchant" />
	<!-- 使用multicast广播注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" group="xinguang" address="172.16.1.181:2181" />
	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20883"  />

	<!-- 声明需要暴露的服务接口 -->
